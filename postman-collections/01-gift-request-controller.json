          "mode": "raw",
          "raw": "{\n  \"filters\": [\n    {\n      \"key\": \"status\",\n      \"operator\": \"eq\",\n      \"value\": \"PENDING\"\n    }\n  ],\n  \"order_by\": [\n    {\n      \"key\": \"created_at\",\n      \"order\": \"desc\"\n    }\n  ]\n}"
        },
        "url": {
          "raw": "{{base_url}}/gift-cards/requests/get?offset=0&limit=10",
          "host": ["{{base_url}}"],
          "path": ["gift-cards", "requests", "get"],
          "query": [
            {
              "key": "offset",
              "value": "0"
