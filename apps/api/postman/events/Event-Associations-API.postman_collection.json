				{
					"name": "Create Event",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Test Event\",\n  \"description\": \"Test event description\",\n  \"event_date\": \"2024-12-31\",\n  \"event_location\": \"onsite\",\n  \"type\": 3,\n  \"assigned_by\": 10367,\n  \"site_id\": null,\n  \"message\": \"Test event message\",\n  \"link\": \"https://example.com/test-event-{{$timestamp}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/events/",
							"host": ["{{baseUrl}}"],
							"path": ["api", "events", ""]
						}
					},
					"response": [],
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Test that the request was successful",
									"pm.test(\"Event created successfully\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"// Extract the event ID from the response and set it as a collection variable",
									"if (pm.response.code === 201) {",
									"    const responseJson = pm.response.json();",
									"    if (responseJson && responseJson.id) {",
									"        pm.collectionVariables.set(\"eventId\", responseJson.id);",
									"        console.log(\"Event ID set to: \" + responseJson.id);",
									"    } else if (responseJson && responseJson.event && responseJson.event.id) {",
									"        pm.collectionVariables.set(\"eventId\", responseJson.event.id);",
									"        console.log(\"Event ID set to: \" + responseJson.event.id);",
									"    } else if (responseJson && responseJson.data && responseJson.data.id) {",
									"        pm.collectionVariables.set(\"eventId\", responseJson.data.id);",
									"        console.log(\"Event ID set to: \" + responseJson.data.id);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					]
				},
				{
