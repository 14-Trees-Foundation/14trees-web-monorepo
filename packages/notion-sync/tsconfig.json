{
  "extends": "tsconfig/base.json",
  "target": "ES2020",
  "exclude": ["./dist/**/*", "node_modules"],
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2020",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "composite": true,
    "declarationMap": true
  }
}
